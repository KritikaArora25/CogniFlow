{
  "manifest_version": 3,
  "name": "CogniFlow Tracker",
  "version": "1.0",
  "description": "Track your focus, tab switches, and idle time.",
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CogniFlow"
  },
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"], 
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
